<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <termination>
        <maximumMinutesSpend>10</maximumMinutesSpend>
    </termination>
    <environmentMode>TRACE</environmentMode>
    <solutionClass>org.jboss.qa.brms.hqp.domain.HudsonQueue</solutionClass>
    <planningEntityClass>org.jboss.qa.brms.hqp.domain.Job</planningEntityClass>
    <scoreDirectorFactory>
        <scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
        <scoreDrl>/org/jboss/qa/brms/hqp/hudsonQueuePlanningRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
        <constructionHeuristicPickEarlyType>NEVER</constructionHeuristicPickEarlyType>
    </constructionHeuristic> 
  
    <localSearch>
        <selector>
            <selector>
                <moveFactoryClass>org.drools.planner.core.move.generic.GenericChangeMoveFactory</moveFactoryClass>
            </selector>
            <selector>
                <moveFactoryClass>org.drools.planner.core.move.generic.GenericSwapMoveFactory</moveFactoryClass>
            </selector>
            <selector>
                <moveFactoryClass>org.drools.planner.core.move.generic.GenericSwapPillarMoveFactory</moveFactoryClass>
            </selector>
        </selector>
        <acceptor>
            <planningEntityTabuSize>4</planningEntityTabuSize>
            <simulatedAnnealingStartingTemperature>4hard/100soft</simulatedAnnealingStartingTemperature>
        </acceptor>
        <forager>
            <pickEarlyType>FIRST_BEST_SCORE_IMPROVING</pickEarlyType>
            <minimalAcceptedSelection>10</minimalAcceptedSelection>
        </forager>
    </localSearch> 
</solver>
